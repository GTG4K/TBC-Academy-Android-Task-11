<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".ImageDetailsFragment">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvImageTitleHint"
        app:layout_constraintTop_toBottomOf="@id/ivImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_hint"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tvImageTitle"
        app:layout_constraintTop_toBottomOf="@id/ivImage"
        app:layout_constraintStart_toEndOf="@id/tvImageTitleHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Rem"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tvImageDescriptionHint"
        app:layout_constraintTop_toBottomOf="@id/tvImageTitleHint"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description_hint"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tvImageDescription"
        app:layout_constraintTop_toBottomOf="@id/tvImageDescriptionHint"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Rem Description"
        android:textSize="22sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>